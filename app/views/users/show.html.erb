<div class="container my-5">
  <div class="row">
    <div class="col-12 text-center title">
        <h3>マイページ</h3>
        <table class= "table table-bordered border-dark table-hover table-inverse custom-table mt-5">
          <tbody>
            <tr>
              <th>プロフィール画像</th>
                <td><%= image_tag @user.get_profile_image(100,100) %></td>
            <tr>
              <th>氏名</th>
                <td><%= @user.last_name %>
                    <%= @user.first_name %></td>
            </tr>
            <tr>
              <th>カナ</th>
                <td><%= @user.last_name_kana %>
                    <%= @user.first_name_kana %></td>
            </tr>
            <tr>
              <th>生年月日</th>
                <td><%= @user.birthday %></td>
            </tr>
            <tr>
              <th>メールアドレス</th>
                <td><%= @user.email %></td>
            </tr>
            <tr>
              <th>電話番号</th>
                <td><%= @user.phone_number %></td>
            </tr>
          </tbody>
        </table>
      <div class= "row ">
        <%= link_to "編集する", edit_information_path, class: "btn btn-info" %>
      </div>
    </div>  
  </div>
</div>