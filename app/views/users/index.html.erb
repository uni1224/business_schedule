<div class="container my-5">
  <div class="row">
    <div class="col-12 text-center title">
      <h3>社員一覧</h3>
       <table class='table table-hover table-inverse salon-user-index-table mt-5'>
          <thead class="text-center">
            <tr>
              <th>氏名</th>
              <th>メールアドレス</th>
              <th>電話番号</th>
              <th>ステータス</th>
            </tr>
          </thead>
          <tbody>
          <% @users.each do |user| %>
            <tr class="text-center">
              <td>
              <%="#{user.last_name} #{user.first_name}"%>(<%="#{user.last_name_kana} #{user.first_name_kana}"%>)
              </td>
              <td><%= user.email %></td>
              <td><%= user.phone_number %></td>
              <% if user.is_deleted == false %>
                <td class="text-success">有効</td>
              <% else %>
                <td class="text-secondary">退会</td>
              <% end %>
              <% end %>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
